{% extends '@MBL/layout.html.twig' %}

{% block titreH2 %} <h2>Modifier votre profil</h2> {% endblock %}


{% block body %}

    <div class="container editprofil">
        <div class="row">
            <div class="col s12">
                {{ form_start(edit_form) }}
                <div class="col s6">
                    <div class="col s12 divform">
                        {{ form_label(edit_form.nom) }}
                        {{ form_errors(edit_form.nom) }}
                        {{ form_widget(edit_form.nom, {'attr': {'placeholder': '  Nom'}}) }}
                    </div>

                    <div class="col s12 divform">
                        {{ form_label(edit_form.prenom) }}
                        {{ form_errors(edit_form.prenom) }}
                        {{ form_widget(edit_form.prenom, {'attr': {'placeholder': ' Prénom '}}) }}
                    </div>

                    <div class="col s12 divform">
                        {{ form_label(edit_form.description) }}
                        {{ form_errors(edit_form.description) }}
                        {{ form_widget(edit_form.description)}}
                    </div>

                    <div class="col s12 divform">
                        {{ form_label(edit_form.linkedIn) }}
                        {{ form_errors(edit_form.linkedIn) }}
                        {{ form_widget(edit_form.linkedIn, {'attr': {'placeholder': ' LinkedIn '}}) }}
                    </div>

                    <div class="col s12 divform">
                        {{ form_label(edit_form.localisation) }}
                        {{ form_errors(edit_form.localisation) }}
                        {{ form_widget(edit_form.localisation, {'attr': {'placeholder': ' Localisation '}}) }}
                    </div>
                    <div class="ville center-align">
                        {{ form_label(edit_form.ville, 'Ville :') }}
                        {{ form_widget(edit_form.ville, {'attr' : {'placeholder' : ' Ville'}}) }}
                        {{ form_errors(edit_form.ville) }}
                    </div>


                </div>


                <div class="col s6">
                    <div class="col s12 divform sltbox">
                        {{ form_label(edit_form.metier) }}
                        {{ form_errors(edit_form.metier) }}
                        {{ form_widget(edit_form.metier, {'attr': {'placeholder': ' Métiers '}}) }}
                    </div>

                    <div class="col s12 divform sltbox">
                        {{ form_label(edit_form.etq) }}
                        {{ form_errors(edit_form.etq) }}
                        {{ form_widget(edit_form.etq, {'attr': {'placeholder': ' En tant que '}}) }}
                    </div>

                    <div class="col s12 divform sltbox">
                        {{ form_label(edit_form.ou) }}
                        {{ form_errors(edit_form.ou) }}
                        {{ form_widget(edit_form.ou, {'attr': {'placeholder': ' Ou '}}) }}
                    </div>

                    <div class="col s12 divform sltbox">
                        {{ form_label(edit_form.invest) }}
                        {{ form_errors(edit_form.invest) }}
                        {{ form_widget(edit_form.invest, {'attr': {'placeholder': ' Investissement '}}) }}
                    </div>

                    <div class="col s12 divform sltbox">
                        {{ form_label(edit_form.dispo) }}
                        {{ form_errors(edit_form.dispo) }}
                        {{ form_widget(edit_form.dispo, {'attr': {'placeholder': ' Disponibilité '}}) }}
                    </div>

                    <div class="col s12 divform sltbox">
                        {{ form_label(edit_form.competences) }}
                        {{ form_errors(edit_form.competences) }}
                        {{ form_widget(edit_form.competences, {'attr': {'placeholder': ' Compétences '}}) }}
                    </div>
                </div>
                <div class="col s12 divFichier">
                    <div class="row">
                        <div class="file center-align">
                            <div class="col s3">
                                {{ form_errors(edit_form.fichier) }}
                                {{ form_widget(edit_form.fichier) }}
                            </div>
                        </div>
                        <div class="col s3">
                            <img class="hiddenPreview" id="preview" src="#" alt="Votre Photo" />
                        </div>
                    </div>

                </div>
                <div class="col s12 divform">
                    <div class="col s6 btnleft">
                        <input class="btn" type="submit" value="Enregistrez"/>
                    </div>
                    <div class="col s6 btnright">
                        <a class="btn" href="{{ path('showMyProfil') }}">Voir mon profil public</a>
                    </div>
                </div>


                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('select').material_select();
        });
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#preview').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#mblbundle_profil_fichier_file").change(function(){
            readURL(this);
        });
        $('.file').on('click', '#mblbundle_profil_fichier_file', (function(){
            $('#preview').removeClass('hiddenPreview')
            $('#preview').slideDown(20000);

            }));

    </script>

{% endblock %}