{% extends '@MBL/layout.html.twig' %}


{% block titreH2 %} <h2>{{ 'Parcourir vos projets'|trans }}</h2> {% endblock %}
{% block body %}
    <div id="showMyProjet">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <h2>{{ flashMessage }}</h2>
        {% endfor %}
        <div class="box_projet">
            <div class="row">

                {% for pro in projects %}
                    <a href="{{ path('showOneProject', {'id': pro.id}) }}">
                        <div class="col s6 m3 l2 vignette_Myprojet  z-depth-5">
                            <div class="row vignette ">
                                <div class="col s12">
                                    {#{{ dump(pro) }}#}

                                    {% if pro.titre|length > 10 %}
                                        <h4 class="center">{{ pro.titre|slice(0,8) ~ '...'  }}</h4>
                                    {% else  %}
                                        <h4 class="center">{{ pro.titre }}</h4>
                                    {% endif %}

                                </div>
                                <div class="col s8 offset-s2 center photo_profil">

                                    {% if pro.fichier is empty %}
                                        <img src="{{ asset('bundles/mbl/img/logoebusta.png') }}">
                                    {% else %}
                                        <img class="responsive-img" src="{{ asset('uploads/images/' ~ pro.fichier[0].photo ) }}">
                                    {% endif %}
                                </div>
                            </div>
                            <div class="row info_projet">
                                <div class="col s12 center">

                                    <h6 class="center">{{ 'Type de projet'|trans }}</h6>

                                        {{ pro.typeDeProjet}}

                                    <div class="divider"></div>
                                </div>
                                <div class="col s12">
                                    <h6 class="center">{{ 'Profils recherch√©s'|trans }}</h6>

                                    {% for profil in pro.metier %}
                                        {% if profil.metier|length > 10 %}
                                            {% if loop.last %}
                                                {{ profil.metier|slice(0,8) ~'...' }}
                                            {% else %}
                                                {{ profil.metier|slice(0,8) ~'...' }},
                                            {% endif %}

                                        {% else %}
                                            {% if loop.last %}
                                                {{ profil.metier }}
                                            {% else %}
                                                {{ profil.metier }},
                                            {% endif %}

                                        {% endif %}

                                    {% endfor %}
                                    <div class="divider"></div>
                                </div>
                                <div class="col s12">
                                    <h6 class="center">{{ 'Localisation'|trans }}</h6>
                                    <p class="center">{{ pro.localisation }}</p>
                                    <div class="divider"></div>
                                </div>
                                <div class="col s12">
                                    <h6 class="center">{{ 'Description'|trans }}</h6>
                                    <p class="center">{{ pro.description }}</p>
                                    <div class="divider"></div>
                                </div>
                            </div>

                            <div class="col s12 divform center ">
                                <a class="btn" href="{{ path('editProjet', {'id': pro.id }) }}">{{ 'Editer'|trans }}</a>
                                <a class="btn" href="{{ path('deleteMyProject', {'id' : pro.id })}}">{{ 'Supprimer'|trans }}</a>
                            </div>
                        </div>
                    </a>
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}