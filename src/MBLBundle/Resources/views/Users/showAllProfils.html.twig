{% extends '@MBL/layout.html.twig' %}

{% block titreH2 %} <h2>Parcourir les profils</h2> {% endblock %}
{% block body %}
    <div id="showAllProfils">
        <div class="container-fluid">
            <div class="box_projet">
                {% for flashMessage in app.session.flashbag.get('error') %}

                    {{ flashMessage }}

                {% endfor %}
                <div class="row">
                    {{ form_start(form_localisation) }}

                    <div class="col s3 m6 l6">
                        {{ form_row(form_localisation.localisation) }}
                        {{ form_errors(form_localisation.localisation) }}
                    </div>
                    <input class="btn" name="Recherchez" type="submit">
                    {{ form_end(form_localisation) }}
                </div>
                <div class="row">

                    {% for pro in profils %}
                        <a href="{{ path('showProfil', { 'id': pro.id }) }}">
                            <div class="col l2 m3 s6 vignette_profil_all  z-depth-5">
                                <div class="row vignette ">
                                    <div class="col s12">
                                        {% if pro.prenom|length > 10 %}
                                            <h4>{{ pro.prenom|slice(0,8) ~ '...'  }}</h4>
                                        {% else  %}
                                            <h4>{{ pro.prenom }} {{ pro.nom|slice(0,1) }}.</h4>
                                        {% endif %}

                                    </div>
                                    <div class="col s8 offset-s2 photo_profil">
                                        {% if pro.fichier is null %}
                                            <img src="{{ asset('bundles/mbl/img/logoebusta.png') }}">
                                        {% else %}
                                            <img class="responsive-img" src="{{ asset('uploads/images/' ~ pro.fichier.photo ) }}">
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="row info_projet">
                                    <div class="col s12">
                                        <h6>Profil</h6>
                                        {% if pro.metier == null  %}
                                            {{ pro.metier }}
                                        {% endif %}
                                        <div class="divider"></div>
                                    </div>
                                    <div class="col s12">
                                        <h6>Comp√©tences</h6>
                                        {% for comp in pro.competences %}
                                            {% if loop.last %}
                                                {{ comp.competences}}
                                            {% else %}
                                                {{ comp.competences}},
                                            {% endif %}
                                        {% endfor %}

                                        <div class="divider"></div>
                                    </div>
                                    <div class="col s12">
                                        <h6>Localisation</h6>
                                        <p>{{ pro.localisation }}, {{ pro.ville }}</p>
                                        <div class="divider"></div>
                                    </div>
                                    <div class="col s12">
                                        <h6>Description</h6>
                                        <p>{{ pro.description }}</p>

                                    </div>

                                </div>
                                {% if app.user.id is defined %}
                                    {% if app.user.id == pro.id %}
                                    {% else %}
                                        <div class="col s12">
                                            <a class="btn grey" href="{{ path('chatConnect', {'id': pro.id}) }}">Discuter</a>
                                        </div>
                                    {% endif %}
                                {% endif %}
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('select').material_select();
        });
    </script>

{% endblock %}