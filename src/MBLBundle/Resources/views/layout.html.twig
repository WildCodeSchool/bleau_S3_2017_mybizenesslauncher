                </div>
            </nav>
        {% else %}

            <nav>
                <div class="nav-wrapper header">
                    <a href="#" class="color">MyBizenessLauncher.com</a>
                    <ul id="nav-mobile" class="right hide-on-med-and-down">
                        <li><a class="color" href="{{ path('showProject') }}">Parcourir les projets</a></li>
                        <li><a class="color" href="">Parcourir les profils</a></li>
                        <li> <a class="color" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
                    </ul>
                </div>
            </nav>


        {% endif %}



{% endblock %}

