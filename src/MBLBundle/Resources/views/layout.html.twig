{% extends 'base.html.twig' %}

{% block title %} MyBizenessLauncher {% endblock %}
{% block header %}

        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

            <ul id="dropdown1" class="dropdown-content header">
                <li><a class="color" href="#">Bonjour  {{app.user.nom}}</a></li>
                <li class="divider"></li>
                <li><a class="color" href="{{ path('homepageProfil') }}">Mon compte</a></li>
                <li><a class="color" href="{{ path('fos_user_security_logout') }}">Log out</a></li>

            </ul>
            <nav>
                <div class="nav-wrapper header">
                    <a href="{{ path('mbl_homepage') }}" class="color">MyBizenessLauncher.com</a>
                    <ul class="right hide-on-med-and-down">
                        <li><a class="color" href="{{ path('showProject') }}">Parcourir les projets</a></li>
                        <li><a class="color" href="{{path('showAllProfils')}}">Parcourir les profils</a></li>
